<style>
    #DebuggingMain
    {
        visible:      false
        z-index:      100
    
        positioning:  relative
        width:        100%
        height:       100%
        top:          0px
        left:         0px
        
        transparent-mouse-input: true        // DebuggingMain is a container element. We want transparent mouse input here. This is not inheritted by child elements.
    }
    
    #FPSPanel
    {
        positioning:  relative
        
        padding:      4px
        right:       -4px
        top:          4px
        width:        auto
        height:       auto
        
        background-color: #333
        border:           1px #666
    }
    
    debug-entry
    {
        width:       auto
        padding-top: 2px
        child-plane: horizontal
    }
    
    debug-font
    {
        font-family: dejavu sans mono
        font-style:  none
        font-size:   8pt
        text-color:  #bbb
    }
    
    debug-entry-title includes debug-font
    {
        width:  96px
        height: auto
    }

    debug-entry-value includes debug-font
    {
        width:  auto
        height: auto
    }
</style>

<div id="DebuggingMain">
    <div id='FPSPanel'>
        <div styleclass='debug-entry' style='padding-top:0px;'>
            <div               styleclass='debug-entry-title'>FPS:</div>
            <div id='FPSValue' styleclass='debug-entry-value' />
        </div>

        <div styleclass='debug-entry'>
            <div                 styleclass='debug-entry-title'>Delta/sec:</div>
            <div id='DeltaValue' styleclass='debug-entry-value' />
        </div>
    </div>
</div>