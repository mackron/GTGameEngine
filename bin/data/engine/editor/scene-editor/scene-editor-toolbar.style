scene-editor-toolbar-viewport-menu-separator
{
    width:            100%
    height:           1px
    background-color: #5a5a5a
    margin:           0px 8px
}


scene-editor-toolbar-playback-container
{
    width:       auto
    height:      auto
    child-plane: horizontal
    margin-left: 8px
}

scene-editor-toolbar-playback-button
{
    width:                  26px
    height:                 22px
    border:                 1px #555
    background-image-color: #aaa
}

scene-editor-toolbar-playback-button:hovered
{
    background-image-color: #ccc
}

scene-editor-toolbar-playback-button:pushed
{
    background-image-color: #eee
}

scene-editor-toolbar-play-button includes scene-editor-toolbar-playback-button
{
    background-image: std-arrow-right-medium
}

scene-editor-toolbar-pause-button includes scene-editor-toolbar-playback-button
{
    background-image: std-pause-12x12
}

scene-editor-toolbar-stop-button includes scene-editor-toolbar-playback-button
{
    background-image: std-square-12x12
    border-left:      none
}

scene-editor-toolbar-stop-button:disabled
{
    background-image-color: #444
}

scene-editor-toolbar-stop-icon
{
    background-image:        std-square-8x8
    background-image-color:  #a66
    background-repeat:       stretch
}


scene-editor-toolbar-snapping-container
{
    width:          auto
    height:         22px
    child-plane:    horizontal
    vertical-align: center
    margin-left:    16px
}

scene-editor-toolbar-snapping-label
{
    width:      auto
    text-color: #aaa
}

scene-editor-toolbar-snapping-textbox includes textbox
{
    width:       64px
    height:      18px
    margin-left: 4px
}

