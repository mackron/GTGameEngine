listbox
{
    height:           auto;
    background-color: #fff;
    border:           1px #666;
    child-plane:      vertical;
}
    
listbox-item
{
    width:            100%
    height:           20px
    background-color: #fff
    vertical-align:   center
    padding:          4px 0px
}
    
listbox-item:hovered
{
    background-color: #f4f4ff
}
    
listbox-item-selected
{
    background-color: #eef
}
    
listbox-item-selected:hovered
{
    background-color: #eef
}
